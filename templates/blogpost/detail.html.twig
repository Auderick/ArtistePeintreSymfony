{% extends 'base.html.twig' %}
{% block title %}
	Mes actualités!

{% endblock %}
{% block body %}
	<!-- Actualité détail Start -->
	<section class="pt-8 pt-md-11">
		<div class="container-fluid">
			<div class="row justify-content-center" id="slide-in">
            <h1 class="display-4 text-center mt-5">
                {{ blogpost.titre }}
            </h1>
				<div class="col-8 row align-items-center py-5 border-top border-bottom">
					<div class="blog-item bg-primary">
						<div class="d-flex align-items-center">
							<div class="bg-secondary mt-n4 d-flex flex-column flex-shrink-0 justify-content-center text-center me-4" style="width: 70px; height: 100px;">
								<i class="fa fa-calendar-alt text-primary mb-2"></i>
								<p class="m-0 text-white">
                                    Publié le
									{{ blogpost.createdAt|date('d M') }}
								</p>
								<small class="text-white">
									{{ blogpost.createdAt|date('Y') }}
								</small>
							</div>
							<div>
								<a class="mb-0 ms-auto text-muted" href="">
									{{ blogpost.contenu }}
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Actualités détail End -->

{% endblock %}
